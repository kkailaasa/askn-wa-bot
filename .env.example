# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# Application Configuration
APP_NAME="E-Citizen WhatsApp Bot"
APP_VERSION="1.0.0"
PORT=8000

# Security Settings
API_KEY=your_secure_api_key_here
CORS_ALLOWED_ORIGINS=https://example.com,https://api.example.com
MAX_REQUEST_SIZE=1048576

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_NUMBER=your_twilio_phone_number_here
TWILIO_NUMBER_2=your_second_twilio_number
TWILIO_MAX_CONNECTIONS=10
MAX_MESSAGES_PER_SECOND=70

## Rate Limiting Configuration

# Phone Verification Rate Limits
RATE_LIMIT_CHECK_PHONE_LIMIT=10
RATE_LIMIT_CHECK_PHONE_PERIOD=300

# Email OTP Rate Limits
RATE_LIMIT_SEND_OTP_LIMIT=3
RATE_LIMIT_SEND_OTP_PERIOD=300

# User Info Rate Limits
RATE_LIMIT_USER_INFO_LIMIT=20
RATE_LIMIT_USER_INFO_PERIOD=300

# Load Balancer Rate Limits
RATE_LIMIT_SIGNUP_LIMIT=10
RATE_LIMIT_SIGNUP_PERIOD=60

RATE_LIMIT_LOAD_STATS_LIMIT=30
RATE_LIMIT_LOAD_STATS_PERIOD=60

# Keycloak Configuration
KEYCLOAK_SERVER_URL=https://your_keycloak_server_url_here
KEYCLOAK_API_CLIENT_ID=your_keycloak_client_id_here
KEYCLOAK_REALM=your_keycloak_realm_here
KEYCLOAK_USER_NAME=your_keycloak_username_here
KEYCLOAK_PASSWORD=your_keycloak_password_here
KEYCLOAK_CACHE_EXPIRATION=3600
KEYCLOAK_TIMEOUT=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=2
REDIS_MAX_RETRIES=3
# Optional: Override auto-generated Redis URL
# REDIS_URL=redis://redis:6379/0

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=an_wa_bot
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30
DB_MAX_OVERFLOW=10
# Optional: Override auto-generated Database URL
# DATABASE_URL=postgresql://postgres:postgres@db:5432/an_wa_bot

# Dify Configuration
DIFY_KEY=your_dify_api_key_here
DIFY_URL=http://dify.url
DIFY_MAX_CONNECTIONS=10
DIFY_TIMEOUT=15

# HTTP Connections
HTTP_POOL_MAX_SIZE=100
HTTP_POOL_TIMEOUT=30


# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM_NAME=Your Name or Company Name
EMAIL_FROM=your_email@example.com

# Optional: Override auto-generated Celery URLs
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# Mattermost Configuration
MATTERMOST_WEBHOOK_URL=your_mattermost_webhook_url