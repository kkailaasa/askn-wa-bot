# Application Settings
APP_NAME="E-Citizen WhatsApp Bot"
APP_VERSION="1.0.0"
PORT=8000

# Environment Settings
ENVIRONMENT=development
DEBUG=True

# Security
API_KEY=your_secure_api_key_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=2
REDIS_MAX_RETRIES=3
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# Twilio Settings
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_NUMBERS=TWILIO_NUMBER_1,TWILIO_NUMBER_2
TWILIO_MAX_CONNECTIONS=10

# Dify Settings
DIFY_KEY=your_dify_api_key_here
DIFY_URL=http://dify.url
DIFY_MAX_CONNECTIONS=10
DIFY_TIMEOUT=15

# Mattermost Settings
MATTERMOST_WEBHOOK_URL=your_mattermost_webhook_url

# Load Balancer Settings
LOAD_BALANCER_HIGH_THRESHOLD=0.7
LOAD_BALANCER_ALERT_THRESHOLD=0.9
MAX_MESSAGES_PER_SECOND=70
LOAD_BALANCER_STATS_WINDOW=60

# Rate Limiting
RATE_LIMIT_LOAD_STATS_LIMIT=100
RATE_LIMIT_LOAD_STATS_PERIOD=3600

# Database Settings
DB_PATH=app/data/app.db